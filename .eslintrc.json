{
    "extends": "airbnb",
    "env": {
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "modules": true
        }
    },
    "globals": {
        "__DEV__": true
    },
    "plugins": [
        "import",
        "react",
        "react-native"
    ],
    "rules": {
        "comma-dangle": 0,
        "import/extensions": 0,
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved": 0,
        "import/prefer-default-export": 0,
        "indent": ["error", 4],
        "no-tabs": 0,
        "no-use-before-define": 0,
        "max-len": "off",
        "require-await": "error",
        "react/jsx-indent": 0,
        "react/jsx-indent-props": [0, "tab"],
        "react/jsx-filename-extension": "off",
        "prop-types": 0,
        "react/jsx-closing-bracket-location": 1,
        "react/prop-types": 1
    }
}